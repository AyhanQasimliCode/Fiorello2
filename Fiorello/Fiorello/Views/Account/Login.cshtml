@using Fiorello.ViewModels.AccountVMs
@model LoginVM

<div class="container">
    <form method="post" style="background-color: cyan; padding: 30px;">
        <h3>Login</h3>
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group">
            <label for="exampleInputEmail1">Username or Email</label>
            <input asp-for="UsernameOrEmail" class="form-control" placeholder="Username or Email">
            <span class="text-danger" asp-validation-for="UsernameOrEmail"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input asp-for="Password" class="form-control" placeholder="Password">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <a asp-action="ForgetPassword" style="color: black; display: block;">Forget password</a>
        <button class="btn btn-primary" style="margin-top: 10px;">Submit</button>
    </form>
</div>