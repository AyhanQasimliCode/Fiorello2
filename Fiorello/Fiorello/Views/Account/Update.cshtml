@using Fiorello.ViewModels.AccountVMs
@model UpdateUserVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form style="padding: 20px; display: flex; justify-content: center;" method="post">
    <div style="width: 50%;">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Name</label>
                <input asp-for="Name" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label>Surname</label>
                <input asp-for="Surname" class="form-control" placeholder="Surname">
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Username</label>
                <input asp-for="Username" class="form-control" placeholder="Username">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label>Email</label>
                <input asp-for="Email" class="form-control" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label>Old Password</label>
                <input asp-for="OldPassword" class="form-control" placeholder="Old Password">
            </div>
            <div class="form-group col-md-4">
                <label>New Password</label>
                <input asp-for="NewPassword" class="form-control" placeholder="New Password">
            </div>
            <div class="form-group col-md-4">
                <label>Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
            </div>
        </div>
        <button class="btn btn-primary">Update</button>
    </div>
</form>

